%ul.sortable-cat
	- categories.each do |category|
		%li{id: category.id}
			= category.name
			= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_category_path(category), :class => 'btn btn-xs btn-default pull-right'
			= link_to t('.destroy', :default => t("helpers.links.destroy")), admin_category_path(category), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger pull-right'
			%hr
			-if category.children.count>0
				= render partial: 'index_item', locals: {categories: category.children}